<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AngelBank" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal</item>
        <item name="colorPrimaryVariant">@color/teal_variant</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/olive</item>
        <item name="colorSecondaryVariant">@color/olive_variant</item>
        <item name="colorOnSecondary">@color/white</item>


        <item name="customerName">@color/black</item>
        <item name="buttonText">@color/black</item>


        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="CustomerName" parent="Widget.AppCompat.TextView">

        <item name="android:textSize">22sp</item>
        <item name="android:textColor">?attr/customerName</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="ButtonText" parent="Widget.MaterialComponents.Button">

        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/buttonText</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="HeadingText1" parent="Widget.AppCompat.TextView">

        <item name="android:textSize">22sp</item>
        <item name="android:textColor">?attr/customerName</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="HeadingText2" parent="Widget.AppCompat.TextView">

        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/customerName</item>

    </style>

</resources>